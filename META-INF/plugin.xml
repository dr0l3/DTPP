<idea-plugin version="2">
  <id>com.droletoursInc.productivity.plugin</id>
  <name>DroleToursProductivityTools</name>
  <version>1.0</version>
  <vendor email="runedrolepedersen@gmail.com">DroleTours Inc.</vendor>

  <description><![CDATA[
      Addon that lets you traverse and edit text much like easymotion<br>
    ]]></description>

  <change-notes><![CDATA[
      Version 1.0 Hurray!<br>
    ]]>
  </change-notes>

  <!-- please see https://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
  <idea-version since-build="131"/>

  <!-- please see https://confluence.jetbrains.com/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <application-components>
    <!-- Add your application components here -->
  </application-components>

  <project-components>
    <!-- Add your project components here -->
  </project-components>

  <actions>
    <!-- Add your actions here -->
    <action id="JumpToTarget" class="JumpToTargetAction" text="Jump to the target"
            description="press the button of the char you want to go to. Then press the letter of the char on the overlay">
      <keyboard-shortcut keymap="$default" first-keystroke="ctrl H" second-keystroke="ctrl J"/>
    </action>
    <action id="InsertCaretAtTarget" class="InsertCaretAtTargetAction" text="Insert caret at the target"
            description="Insert a caret at the destination of the overlay">
      <keyboard-shortcut keymap="$default" first-keystroke="ctrl H" second-keystroke="ctrl R"/>
    </action>
    <action id="SelectFromCurrentToTarget" class="SelectFromCurrentToTargetAction" text="Select from current position to target position"
            description="Selects the text from the current caret position to the target position defined by the overlay">
      <keyboard-shortcut keymap="$default" first-keystroke="ctrl H" second-keystroke="ctrl L"/>
    </action>
    <action id="DeleteToTarget" class="DeleteToTargetAction" text="Delete to target"
            description="Delete from the current position to the target position defined by the overlay">
      <keyboard-shortcut keymap="$default" first-keystroke="ctrl H" second-keystroke="ctrl E"/>
    </action>
    <action id="CutToTarget" class="CutToTargetAction" text="Cut to target position"
            description="Cut the text from the current position to the target position defined by the overlay">
      <keyboard-shortcut keymap="$default" first-keystroke="ctrl H" second-keystroke="ctrl K"/>
    </action>
    <action id="SelectDoubleCommand" class="SelectDoubleCommandAction" text="Select a region using two overlays"
            description="Select from start position chosen using first over to end position chosen using second overlay">
      <keyboard-shortcut keymap="$default" first-keystroke="ctrl H" second-keystroke="ctrl F"/>
    </action>
    <action id="DoubleCommandDelete" class="DoubleCommandDeleteAction" text="Delete using two overlays"
            description="Delete from start position chosen using first over to end position chosen using second overlay">
      <keyboard-shortcut keymap="$default" first-keystroke="ctrl H" second-keystroke="ctrl D"/>
    </action>
    <action id="CutTextDoubleCommand" class="CutTextDoubleCommandAction" text="Cut text with double overlay"
            description="Cut text from start position chosen using first over to end position chosen using second overlay">
      <keyboard-shortcut keymap="$default" first-keystroke="ctrl H" second-keystroke="ctrl X"/>
    </action>
    <action id="InsertDoubleCommand" class="InsertDoubleCommandAction" text="insert to current position using two overlays"
            description="Insert text at the current position from start position chosen using first over to end position chosen using second overlay">
      <keyboard-shortcut keymap="$default" first-keystroke="ctrl H" second-keystroke="ctrl V"/>
    </action>
    <action id="ChangeWindow" class="ChangeWindowAction" text="ChangeWindow" description="Change to a random window">
      <keyboard-shortcut keymap="$default" first-keystroke="ctrl H" second-keystroke="ctrl I"/>
    </action>
  </actions>

</idea-plugin>